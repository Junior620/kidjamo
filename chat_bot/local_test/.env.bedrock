# Configuration Amazon Bedrock - ENDPOINT CORRIGÉ + Clés AWS
# Variables d'environnement pour AWS Bedrock

# ================================
# BEDROCK API TOKEN (CONFIGURÉ) - ENDPOINT CORRIGÉ
# ================================
# Votre token Bearer Bedrock configuré avec le bon endpoint

# Token d'authentification Bedrock
AWS_BEARER_TOKEN_BEDROCK=YOUR_BEDROCK_BEARER_TOKEN

# Configuration API Bedrock - ENDPOINT CORRIGÉ
BEDROCK_API_ENDPOINT=https://bedrock.us-east-1.amazonaws.com
AWS_REGION=eu-west-1

# ================================
# CLÉS AWS TRADITIONNELLES (BACKUP)
# ================================
# Vos vraies clés AWS pour fallback si Bearer Token échoue

AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY

# ================================
# CONFIGURATION BEDROCK
# ================================

# Modèles préférés
BEDROCK_PRIMARY_MODEL=claude-3-haiku
BEDROCK_FALLBACK_MODEL=anthropic.claude-v2
BEDROCK_EMERGENCY_MODEL=claude-3-haiku

# Limites et performance
BEDROCK_MAX_RETRIES=3
BEDROCK_TIMEOUT=30
BEDROCK_CACHE_TTL=1800

# Budget et alertes
BEDROCK_DAILY_BUDGET_USD=10.00
BEDROCK_ALERT_THRESHOLD_USD=8.00
BEDROCK_MAX_COST_PER_REQUEST=0.05

# ================================
# CONFIGURATION PRODUCTION
# ================================

# Environnement
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Serveur
HOST=0.0.0.0
PORT=5000
WORKERS=4

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000
REQUEST_TIMEOUT=30

# Cache
CACHE_TTL_SECONDS=1800
MAX_CACHE_SIZE=1000

# ================================
# CONFIGURATION MÉDICALE CAMEROUN
# ================================

# Numéros d'urgence validés
EMERGENCY_NUMBER_CAMEROON=1510
HOSPITAL_CENTRAL_YAOUNDE=Hôpital Central de Yaoundé
HOSPITAL_GENERAL_DOUALA=Hôpital Général de Douala
CHU_YAOUNDE=CHU de Yaoundé

# Centres spécialisés drépanocytose
SPECIALIZED_CENTER_1=CHU de Yaoundé - Hématologie
SPECIALIZED_CENTER_2=Hôpital Laquintinie Douala
SPECIALIZED_CENTER_3=Centre Pasteur Cameroun

# ================================
# MONITORING ET ALERTES
# ================================

# Alertes email/SMS
ALERT_EMAIL=admin@kidjamo.com
SMS_ALERT_NUMBER=+237123456789

# Seuils d'alerte
ALERT_ERROR_RATE_THRESHOLD=5
ALERT_COST_THRESHOLD=5.00
ALERT_LATENCY_THRESHOLD=10000
