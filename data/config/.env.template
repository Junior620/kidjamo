# Configuration environnement pour le pipeline d'ingestion drépanocytose
# IMPORTANT: Ce fichier contient des secrets - ne jamais commiter dans Git

# === SECRETS CRYPTOGRAPHIQUES ===
# Salt pour hachage des identifiants patients (générer avec: openssl rand -hex 32)
PSEUDONYMIZATION_SALT=a1b2c3d4e5f6789012345678901234567890abcdef1234567890abcdef123456

# Clé de chiffrement pour données sensibles (AES-256)
ENCRYPTION_KEY=def456789012345678901234567890123456789012345678901234567890abcd

# === BASE DE DONNÉES LOCALE ===
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kidjamo-db
DB_USER=postgres
DB_PASSWORD=kidjamo@

# === CHEMINS PIPELINE ===
BRONZE_BASE_PATH=D:\kidjamo-workspace\data\lake\bronze
SILVER_BASE_PATH=D:\kidjamo-workspace\data\lake\silver
GOLD_BASE_PATH=D:\kidjamo-workspace\data\lake\gold
QUARANTINE_PATH=D:\kidjamo-workspace\data\quarantine
EVIDENCE_PATH=D:\kidjamo-workspace\data\evidence

# === CONFIGURATION SPARK ===
SPARK_DRIVER_MEMORY=4g
SPARK_EXECUTOR_MEMORY=2g
SPARK_CORES_MAX=4
SPARK_SQL_ADAPTIVE_ENABLED=true

# === SEUILS MÉDICAUX ===
MEDICAL_THRESHOLDS_CONFIG=conf/medical_thresholds.json
ALERT_COOLDOWN_SECONDS=120
MAX_ALERT_RATE_PER_HOUR=10

# === OBSERVABILITÉ ===
METRICS_EXPORT_INTERVAL_MINUTES=5
LOG_LEVEL=INFO
ALERT_WEBHOOK_URL=http://localhost:8080/alerts
MONITORING_ENABLED=true

# === SÉCURITÉ ===
# Rotation automatique des clés (en heures)
KEY_ROTATION_INTERVAL_HOURS=24
AUDIT_LOG_RETENTION_DAYS=90
ENABLE_ENCRYPTION_AT_REST=true
PII_MASKING_ENABLED=true

# === PERFORMANCE ===
BATCH_SIZE_RECORDS=5000
MAX_LATENCY_P95_MS=5000
TARGET_THROUGHPUT_RECORDS_PER_SEC=100
ENABLE_COMPRESSION=true
COMPRESSION_CODEC=snappy

# === TWILIO SMS CONFIGURATION ===
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=YOUR_TWILIO_PHONE_NUMBER
TWILIO_MESSAGING_SERVICE_SID=YOUR_TWILIO_MESSAGING_SERVICE_SID

# === SENDGRID EMAIL CONFIGURATION ===
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY
SENDGRID_FROM_EMAIL=YOUR_FROM_EMAIL
SENDGRID_FROM_NAME=YOUR_FROM_NAME
