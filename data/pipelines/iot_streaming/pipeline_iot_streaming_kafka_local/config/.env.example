# Configuration pour pipeline IoT streaming Kidjamo
# Copier vers .env et ajuster selon votre environnement

# === KAFKA CONFIGURATION ===
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_GROUP_ID=kidjamo-iot-streaming

# Topics Kafka
KAFKA_TOPIC_MEASUREMENTS=kidjamo-iot-measurements
KAFKA_TOPIC_ALERTS=kidjamo-iot-alerts
KAFKA_TOPIC_DEVICE_STATUS=kidjamo-iot-device-status
KAFKA_TOPIC_ERRORS=kidjamo-iot-errors

# === API CONFIGURATION ===
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=1
API_LOG_LEVEL=info

# === SPARK CONFIGURATION ===
SPARK_MASTER=local[*]
SPARK_APP_NAME=Kidjamo-IoT-Streaming
SPARK_CHECKPOINT_LOCATION=./checkpoints
SPARK_SHUFFLE_PARTITIONS=4

# === DATA LAKE PATHS ===
DATA_LAKE_BASE=./data_lake
RAW_DATA_PATH=./data_lake/raw
BRONZE_DATA_PATH=./data_lake/bronze
SILVER_DATA_PATH=./data_lake/silver
GOLD_DATA_PATH=./data_lake/gold

# === MEDICAL THRESHOLDS ===
CRITICAL_SPO2_THRESHOLD=90
CRITICAL_HEART_RATE_MIN=50
CRITICAL_HEART_RATE_MAX=150
FEVER_THRESHOLD=38.0
HIGH_FEVER_THRESHOLD=39.0

# === SIMULATOR CONFIGURATION ===
SIMULATOR_PATIENTS_COUNT=5
SIMULATOR_INTERVAL_SECONDS=60
SIMULATOR_DURATION_MINUTES=30

# === MONITORING ===
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO

# === SECURITY ===
API_SECRET_KEY=your-secret-key-change-in-production
ENABLE_CORS=true

# === DEVELOPMENT ===
DEBUG_MODE=true
ENABLE_CONSOLE_OUTPUT=true
